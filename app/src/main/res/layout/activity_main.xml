<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter Amount"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonMAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert MAD to EUR"
        android:background="@color/teal_200"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonEUR"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/teal_200"
        android:text="Convert EUR to USD" />

    <Button
        android:id="@+id/buttonUSD"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/teal_200"
        android:text="Convert USD to MAD" />

    <TextView
        android:id="@+id/textViewEUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewUSD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />

</LinearLayout>
